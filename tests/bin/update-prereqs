#!/usr/bin/perl
use strict;
use warnings;

for my $dir (qw(lib lib/Test lib/Test/Harness)) {
    mkdir $dir unless -d $dir;
}

sub run {
    system(@_) == 0 or die '"' . join(' ', @_) . '" failed';
}

my $test_simple_path = "$ENV{HOME}/Build/Test.Simple-0.21/lib";

run "cp $test_simple_path/Test/Harness.js lib/Test/Harness.js";
run "cp $test_simple_path/Test/Harness/Browser.js lib/Test/Harness/Browser.js";
run "cp $test_simple_path/Test/Builder.js lib/Test/Builder.js";

run "cp ../../Subclass/lib/Subclass.js lib/Subclass.js";
run "cp ../../Test-Base-JS/lib/Test/Base.js lib/Test/Base.js";
